<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.LoginActivity"
    xmlns:tools="http://schemas.android.com/tools">
  <View android:id="@+id/ellipse_1"
        android:background="@drawable/circle"
        android:layout_width="216.0dp"
        android:layout_height="216.0dp"
        android:layout_marginTop="-80.0dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-40.0dp"
        android:layout_alignParentEnd="true" />
  <View android:id="@+id/ellipse_2"
        android:background="@drawable/circle"
        android:layout_width="106.0dp"
        android:layout_height="106.0dp"
        android:layout_marginTop="155.0dp"
        android:layout_marginStart="-50.0dp"
        android:layout_alignParentStart="true" />
  <View android:id="@+id/ellipse_3"
        android:background="@drawable/circle"
        android:layout_width="151.0dp"
        android:layout_height="151.0dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="-70.0dp"
        android:layout_alignParentEnd="true" />
  <View android:id="@+id/ellipse_4"
        android:background="@drawable/circle"
        android:layout_width="151.0dp"
        android:layout_height="151.0dp"
        android:layout_marginBottom="100.0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-75.0dp"
        android:layout_alignParentStart="true" />
  <View android:id="@+id/ellipse_5"
        android:background="@drawable/circle"
        android:layout_width="120.0dp"
        android:layout_height="120.0dp"
        android:layout_marginBottom="-40.0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30.0dp"
        android:layout_alignParentEnd="true" />
  <RelativeLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true">
    <TextView android:textSize="50.0sp"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:id="@+id/loginText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Sign In"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"
              android:textAlignment="center" />
    <TextView android:textSize="20.0sp"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:gravity="top"
              android:id="@+id/indukText"
              android:layout_width="300.0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="30.0dp"
              android:text="NIS"
              android:layout_below="@id/loginText"
              android:layout_centerHorizontal="true" />
    <EditText android:textSize="15.0sp"
              android:textColor="@color/black"
              android:textColorHint="#cabfbf"
              android:id="@+id/nis"
              android:background="@drawable/textbox_layout"
              android:padding="10.0sp"
              android:layout_width="300.0dp"
              android:layout_height="43.0dp"
              android:layout_marginTop="5.0dp"
              android:hint="Enter Your NIS"
              android:layout_below="@id/indukText"
              android:layout_centerHorizontal="true"
              android:inputType="numberSigned" />
    <TextView android:textSize="20.0sp"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:gravity="top"
              android:id="@+id/passwordText"
              android:layout_width="300.0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="35.0dp"
              android:text="Password"
              android:layout_below="@id/nis"
              android:layout_centerHorizontal="true" />
    <EditText android:textSize="15.0sp"
              android:textColor="@color/black"
              android:textColorHint="#cabfbf"
              android:id="@+id/password"
              android:background="@drawable/textbox_layout"
              android:padding="10.0sp"
              android:layout_width="300.0dp"
              android:layout_height="43.0dp"
              android:layout_marginTop="5.0dp"
              android:hint="Enter Your Password"
              android:layout_below="@id/passwordText"
              android:layout_centerHorizontal="true"
              android:inputType="textPassword" />
    <CheckBox android:textSize="15.0sp"
              android:textColor="@color/black"
              android:id="@+id/show_pass"
              android:layout_width="300.0dp"
              android:layout_height="50.0dp"
              android:checked="false"
              android:text="Show Password"
              android:layout_below="@id/password" />
    <Button android:textSize="25.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/loginBtn"
            android:background="@drawable/primary_btn"
            android:layout_width="218.0dp"
            android:layout_height="55.0dp"
            android:layout_marginTop="50.0dp"
            android:text="Sign In"
            android:layout_below="@id/show_pass"
            android:layout_centerHorizontal="true" />
  </RelativeLayout>
  <RelativeLayout android:id="@+id/loading"
                  android:background="@color/white"
                  android:visibility="gone"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
    <ProgressBar android:id="@+id/progress"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:indeterminate="true"
                 android:layout_centerHorizontal="true"
                 android:layout_centerVertical="true"
                 android:indeterminateTint="@color/firstPrimaryColor" />
  </RelativeLayout>
</RelativeLayout>